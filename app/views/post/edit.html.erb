<div class="container">
    <form action="/post/update/<%= @post.id %>" method="post">
      <div class="form-group">
        <label for="exampleFormControlInput1">Title</label>
        <input type="text" name="title" value="<%= @post.title %>" class="form-control" id="exampleFormControlInput1" placeholder="enter the title" required>
      </div>
      <div class="form-group">
        <label for="exampleFormControlTextarea1">Content</label>
        <textarea name="content" class="form-control" id="exampleFormControlTextarea1" rows="10" required><%= @post.content %></textarea>
      </div>
      <button type="submit" class="btn btn-dark float-right">Send</button>
    </form>
</div>